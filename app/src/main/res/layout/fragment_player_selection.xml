<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.playerselection.PlayerSelectionActivityFragment"
    tools:showIn="@layout/activity_player_selection">

    <Spinner
        android:id="@+id/knownPlayer"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/knownPlayerText"
        android:layout_marginTop="19dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="52dp" />

    <EditText
        android:id="@+id/newplayer"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:layout_above="@+id/playerList"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/knownPlayerText"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Joueur déjà enregistré"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/addNewPlayer"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_alignBaseline="@+id/newplayer"
        android:layout_alignBottom="@+id/newplayer"
        android:layout_alignParentEnd="true"
        android:text="Ajouter"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/addKnownPlayer"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/knownPlayer"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/knownPlayer"
        android:text="Ajouer"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="53dp" />

    <ListView
        android:id="@+id/playerList"
        android:layout_width="368dp"
        android:layout_height="253dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="194dp" />

</RelativeLayout>
